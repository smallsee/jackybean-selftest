.image-bg{
  top: 0;
  left: 0;
  z-index: -1;
  position: absolute;
  width: 100%;
  height: 100%;
}
.image-bg image{
  width: 100%;
  height: 100%;
}
.avatar-box{
  box-sizing: border-box;
  width: 100%;
  height: 190rpx;
  padding: 20rpx 0 0 128rpx;
}
.avatar-box image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
