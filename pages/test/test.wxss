.container{
    display: flex;
    flex-direction:column;
    align-items: center;
    height: 100%
}
.avatar-box{
      width:200rpx;
    height:200rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 100rpx auto;
    margin-bottom: 0
}
.avatar{
    width:200rpx;
    height:200rpx;
    border-radius: 50%;
}

.motto{
    display: block;
    margin:50rpx auto;
    font-size:32rpx;
    font-weight: bold;
     line-height:45rpx;
    text-align: center;
}

.journey-container{
    margin: 50rpx auto;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align:center;
}

.journey{
    font-size:22rpx;
    font-weight: bold;
    line-height:80rpx;
    color: #405f80;
}

.in-end{
  position: fixed;
  bottom: 0rpx;
}

page{
    height: 100%;
}

.image-bg{
  top: 0;
  left: 0;
  z-index: -1;
  position: absolute;
  width: 100%;
  height: 100%;
}
.image-bg image{
  width: 100%;
  height: 100%;
}

swiper{
  width: 100%;
  height: 100%;
}

.question{
  width: 100%;
  height: 850rpx;
  position: relative;
  box-sizing: border-box;
  padding-top: 375rpx;
  text-align: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.question .sign{
    margin-top:-112rpx;
    margin-left:96rpx;
    display:block;
    width:76rpx;
    height:130rpx;
    color: #0070c2;
    font-size: 34rpx;
}
.question .title{
  text-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, .4);
  font-size: 60rpx;
  font-weight: 600;
  color: white;
  text-align: center;
}
.question .title_small{
    text-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, .4);
  font-size: 50rpx;
  font-weight: 600;
  color: white;
  text-align: center;
}
.answer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 586rpx;
  height: 100rpx;
  margin: 72rpx auto;
   text-align: center;
}
.answer-title{
    width: 253rpx;
    height: 100%;
    text-align: center;
    font-size: 40rpx;
    color: white;
    line-height: 110rpx;
}

.answer2{

